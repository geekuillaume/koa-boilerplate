{
  "name": "nodejs-api-kickstarter",
  "version": "1.0.0",
  "description": "An opinionated NodeJS API Boilerplate focused on extensability and developer productivity.",
  "keywords": [
    "koa",
    "boilerplate",
    "api"
  ],
  "author": "Guillaume \"geekuillaume\" Besson",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "test": "NODE_ENV=test jest --verbose",
    "test:watch": "NODE_ENV=test jest --watch --verbose -i",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "watch:ts": "tsc-watch --onSuccess 'bash -c \"FORCE_JS=true node ./dist/index.js\"'",
    "watch": "concurrently 'npm:watch:*'",
    "start": "tsc && FORCE_JS=true node ./dist/index.js",
    "start:prod": "NODE_ENV=production node ./dist/index.js",
    "build": "tsc && ONLY_BUILD_CACHE=true node ./dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint-staged": "lint-staged",
    "db:createMigration": "echo 'Remember to run the build process before' && ts-node ./node_modules/.bin/typeorm migration:generate -n",
    "db:cleanTest": "NODE_ENV=test typeorm schema:drop",
    "db:seed": "node ./dist/bin/seedDb.js",
    "db:migrate": "node ./dist/bin/migrateDb.js",
    "doc:generate": "ts-node ./misc/internals/docGenerator.ts"
  },
  "dependencies": {
    "@graphile-contrib/pg-simplify-inflector": "^4.0.0-alpha.0",
    "@koa/cors": "^2.2.2",
    "apollo-server-koa": "^2.4.8",
    "bcrypt": "^3.0.4",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "config": "^3.0.1",
    "debug": "^4.1.1",
    "faker": "^4.1.0",
    "glob": "^7.1.2",
    "graphile-utils": "^4.3.1",
    "graphile-worker": "^0.1.0-alpha.0",
    "graphql": "^14.1.1",
    "graphql-parse-resolve-info": "^4.1.0",
    "handlebars": "^4.0.11",
    "jsonwebtoken": "^8.2.0",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.0.0",
    "koa-logger": "^3.2.0",
    "koa-pino-logger": "^2.1.3",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.5",
    "luxon": "^1.12.0",
    "nodemailer": "^5.1.1",
    "pg": "^7.8.0",
    "pino": "^5.11.1",
    "pino-debug": "^1.2.0",
    "postgraphile": "^4.3.3",
    "postgrator": "^3.10.1",
    "pretty-error": "^2.1.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^8.0.2",
    "type-graphql": "^0.17.0",
    "typeorm": "^0.2.13",
    "typescript": "^3.4.1",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/config": "0.0.34",
    "@types/faker": "^4.1.2",
    "@types/graphql": "^14.0.7",
    "@types/jest": "^24.0.11",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/koa": "^2.0.44",
    "@types/koa-logger": "^3.1.0",
    "@types/koa-router": "^7.0.27",
    "@types/lodash": "^4.14.107",
    "@types/luxon": "^1.11.1",
    "@types/nodemailer": "^4.6.0",
    "@types/pino": "^5.8.5",
    "@types/supertest": "^2.0.4",
    "@types/uuid": "^3.4.3",
    "@typescript-eslint/eslint-plugin": "^1.4.0",
    "@typescript-eslint/parser": "^1.3.0",
    "concurrently": "^4.1.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "nodemon": "^1.17.2",
    "pino-pretty": "^2.5.0",
    "spectacle-docs": "^1.0.3",
    "supertest": "^3.0.0",
    "swagger-jsdoc": "^3.2.7",
    "ts-jest": "^24.0.0",
    "tsc-watch": "^2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run --silent lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  }
}
