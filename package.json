{
  "name": "nodejs-api-kickstarter",
  "version": "1.0.0",
  "description": "An opinionated NodeJS API Boilerplate focused on extensability and developer productivity.",
  "keywords": [
    "koa",
    "boilerplate",
    "api"
  ],
  "author": "Guillaume \"geekuillaume\" Besson",
  "license": "MIT",
  "main": "src/index.js",
  "scripts": {
    "test": "NODE_ENV=test jest --verbose",
    "test:watch": "NODE_ENV=test jest --watch --verbose -i",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "watch": "nodemon --watch 'src/**/*' -e ts,tsx --exec 'ts-node -r tsconfig-paths/register' ./src/index.ts",
    "start": "ts-node -r tsconfig-paths/register ./src/index.ts",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "lint-staged": "lint-staged",
    "db:createMigration": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:generate -n",
    "db:migrate": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:run",
    "db:revert": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:revert",
    "db:cleanTest": "NODE_ENV=test ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm schema:drop",
    "doc:generate": "ts-node ./misc/internals/docGenerator.ts"
  },
  "dependencies": {
    "@koa/cors": "^2.2.2",
    "bcrypt": "^3.0.4",
    "bristol": "^0.4.0",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "config": "^3.0.1",
    "faker": "^4.1.0",
    "glob": "^7.1.2",
    "handlebars": "^4.0.11",
    "humps": "^2.0.1",
    "husky": "^1.3.1",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.2.0",
    "koa": "^2.5.0",
    "koa-body": "^4.0.8",
    "koa-compose": "^4.0.0",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.5",
    "luxon": "^1.11.3",
    "nodemailer": "^5.1.1",
    "pg": "^7.8.0",
    "pretty-error": "^2.1.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^8.0.2",
    "tsconfig-paths": "^3.8.0",
    "typeorm": "^0.2.13",
    "typescript": "^3.3.3",
    "uuid": "^3.2.1",
    "winston": "^3.0.0-rc3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/config": "0.0.34",
    "@types/faker": "^4.1.2",
    "@types/humps": "^1.1.2",
    "@types/jest": "^24.0.6",
    "@types/joi": "^14.3.1",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/koa": "^2.0.44",
    "@types/koa-logger": "^3.1.0",
    "@types/koa-router": "^7.0.27",
    "@types/lodash": "^4.14.107",
    "@types/luxon": "^1.11.1",
    "@types/nodemailer": "^4.6.0",
    "@types/supertest": "^2.0.4",
    "@types/uuid": "^3.4.3",
    "@typescript-eslint/eslint-plugin": "^1.4.0",
    "@typescript-eslint/parser": "^1.3.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-typescript": "^0.14.0",
    "jest": "^24.1.0",
    "joi-to-swagger": "^3.1.0",
    "lint-staged": "^8.1.4",
    "nodemon": "^1.17.2",
    "spectacle-docs": "^1.0.3",
    "supertest": "^3.0.0",
    "swagger-jsdoc": "^3.2.7",
    "ts-jest": "^24.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run --silent lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  }
}
